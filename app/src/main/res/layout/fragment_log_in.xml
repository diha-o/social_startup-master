<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayout2">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#BDBDBD"
    app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
    app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
    android:layout_gravity="center"
    android:elevation="3dp"
    app:cardBackgroundColor="#E7EAEF"
    app:cardElevation="4dp"
    android:layout_marginRight="46dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="44dp"
    app:cardCornerRadius="1dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_below"
                android:layout_width="match_parent"
                style="@style/TextLabel"

                android:textColorHint="@color/textHintColor"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:ems="7"
                    android:id="@+id/log_in_email"
                    android:hint="E-mail"
                    android:theme="@style/AppTheme"
                    android:drawablePadding="6dp"
                    android:drawableTint="#616161"
                    android:drawableRight="@drawable/ic_perm_identity_black_24dp"
                    android:textSize="16sp"
                    android:text="qwerty@qwerty.com" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">


            <android.support.design.widget.TextInputLayout
                android:layout_below="@+id/text_input_below"
                android:id="@+id/text_input_below_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/TextLabel"

                android:textColorHint="@color/textHintColor">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:ems="7"
                    android:id="@+id/log_in_pass"
                    android:hint="Pass"
                    android:layout_weight="1"
                    android:theme="@style/AppTheme"
                    android:textSize="16sp"
                    android:drawablePadding="6dp"
                    android:drawableTint="#616161"
                    android:drawableRight="@drawable/ic_lock_open_black_24dp"
                    android:text="qwerty" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <Button
            android:layout_below="@+id/text_input_below_2"
            android:text="LogIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_log_in"
            android:layout_alignRight="@id/text_input_below_2"
            android:layout_alignStart="@id/text_input_below_2"
            android:minHeight="49dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:theme="@style/AppTheme"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textStyle="normal|bold"
             />
    </LinearLayout>

</android.support.v7.widget.CardView>


</LinearLayout>