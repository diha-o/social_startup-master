<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:lv="http://schemas.android.com/apk/res-auto"
    android:background="@color/otherBckColor"
    android:orientation="vertical">

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:id="@+id/statbar_container_chatRooms">

</FrameLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:cacheColorHint="@color/cardview_light_background"
        android:divider="@drawable/list_divider"
        android:dividerHeight="1dp"
        />

    <me.wangyuwei.loadingview.LoadingView
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        lv:lv_duration="5"
        lv:lv_start_color="@color/colorPrimaryDark"
        lv:lv_end_color="@color/colorPrimary"
        lv:lv_internal_radius="2dp"
        lv:lv_external_radius="20dp"/>
</RelativeLayout>
</LinearLayout>