<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/otherBckColor"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayout3">

    <com.theartofdev.edmodo.cropper.CropImageView
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cropImageView"
        android:layout_width="368dp"
        android:layout_height="481dp"
        android:layout_weight="1"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@color/navigationBarColor"
        app:layout_constraintLeft_toLeftOf="@+id/cropImageView"
        app:layout_constraintRight_toRightOf="@+id/cropImageView"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3"
        android:gravity="center">

        <ImageView
            android:visibility="gone"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clear"
            tools:layout_editor_absoluteX="124dp"
            tools:layout_editor_absoluteY="8dp"
            android:src="@drawable/ic_clear_white_24dp"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"/>
        <ImageView
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chose_img"
            tools:layout_editor_absoluteX="124dp"
            tools:layout_editor_absoluteY="8dp"
            android:src="@drawable/ic_crop_original_white_24dp"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"/>

        <ImageView
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/open_cameta"
            android:src="@drawable/ic_camera_white_24dp"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="8dp"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:id="@+id/next_step"
            android:layout_weight="2"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="8dp"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>